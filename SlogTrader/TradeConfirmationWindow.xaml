<Window x:Class="SlogTrader.TradeConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Trade and Order Confirmations" Height="265.683" Width="551.292">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!--
        <Border Grid.Row="0">
            <TextBlock>Trade confirmation details...</TextBlock>
        </Border>
        -->
        <TextBlock></TextBlock>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <CheckBox HorizontalAlignment="Left">Pop up every confirmation</CheckBox>
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button HorizontalAlignment="Right" Margin="5" Padding="10,0">Close</Button>
                <Button HorizontalAlignment="Right" Margin="5" Padding="10,0">Print</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
